{{!
    @template block_activity_discuss/discussion-post

    Display forum discussion post.

    Example context (json):

        {
            "id": "Post id",
            "userpicture": "/pluginfile.php/5/user/icon/adaptable/f2",
            "fullname": "Full name",
            "userprofilelink": "/user/view.php?id=122",
            "timesince": "11:00:00",
            "subject": "Subject",
            "message": "Message"
        }

}}

	<li class="block_activity_discuss_feed_item block_activity_discuss_feed_item_border">
		<div class="block_activity_discuss_feed_item_user">
			<div class="block_activity_discuss_feed_item_a_avatar" aria-hidden="true">
                <span class="picture">
                    {{{userpicture}}}
                </span>
            </div>
        </div>

		<div class="block_activity_discuss_feed_item_body">
			<div class="block_activity_discuss_feed_item_header">
				<div class="block_activity_discuss_feed_item_preamble">
					<div class="block_activity_discuss_feed_item_heading_primary">
						<a href="{{{userprofilelink}}}">{{{fullname}}}</a>
					</div>
				</div>
				<div class="block_activity_discuss_feed_item_meta">
                    <span class="block_activity_discuss_feed_item_timestamp"><time>{{{timesince}}}</time></span>
                </div>
			</div>
			<div class="block_activity_discuss_feed_item_content">
					<div class=""><p>{{{message}}}</p>
					</div>
			</div>
			<div class="block_activity_discuss_feed_item_actions">

					<button aria-label="comment reply button" class="block_activity_discuss_action_button" value="{{{id}}}">Reply</button>

			</div>

            {{#editpostallowed}}
                    <div class="block_activity_discuss_edit_post_container"><a href="{{{editlink}}}" title="{{{editlinktext}}}">{{{editlinktext}}}</a></div>
            {{/editpostallowed}}

			<div id="course-discuss-reply-form-container_{{{id}}}" class="course-discuss-reply-form-container"></div>
			<div id="comment_{{{id}}}"></div>
		</div>
	</li>

